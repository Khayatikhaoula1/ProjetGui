<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.InscriptionController">
    <Label text="Inscription" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" />

    <Button text="S'inscrire" onAction="#handleInscription" />

    <Hyperlink text="Déjà un compte ? Se connecter" onAction="#goToLogin" />
</VBox>
