<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.InscriptionController">
    <top>
        <HBox style="-fx-background-color: linear-gradient(to right, #9299C6, #6A72A6); -fx-padding: 15;">
            <Label text="Inscription au Système" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;">
                <font>
                    <Font name="Segoe UI" size="24.0" />
                </font>
                <effect>
                    <Glow level="0.8" />
                </effect>
            </Label>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #F4F4F9; -fx-padding: 50;">
            <TextField fx:id="nameField" promptText="Nom complet" styleClass="input-field" />
            <TextField fx:id="emailField" promptText="Adresse email" styleClass="input-field" />
            <PasswordField fx:id="passwordField" promptText="Mot de passe" styleClass="input-field" />
            <ComboBox fx:id="roleComboBox" promptText="Sélectionner un rôle" styleClass="input-field">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Étudiant" />
                        <String fx:value="Enseignant" />
                        <String fx:value="Administrateur" />
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="S'inscrire" styleClass="auth-button" onAction="#handleInscription" />
        </VBox>
    </center>
</BorderPane>