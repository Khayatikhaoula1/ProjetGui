<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
    <children>
        <VBox spacing="20" alignment="CENTER" layoutX="50" layoutY="50">
            <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
            <PasswordField fx:id="passwordField" promptText="Mot de passe" />
            <Button text="Se connecter" onAction="#handleLogin" />
            <Label fx:id="errorLabel" textFill="red" />
        </VBox>
    </children>
</AnchorPane>
