<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.NoteController">

    <TableView fx:id="tableNotes" layoutX="20" layoutY="20" prefWidth="600" prefHeight="300">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colEtudiantId" text="Étudiant ID" prefWidth="100"/>
            <TableColumn fx:id="colCoursId" text="Cours ID" prefWidth="100"/>
            <TableColumn fx:id="colNote" text="Note" prefWidth="100"/>
            <TableColumn fx:id="colNoteControle" text="Note Contrôle" prefWidth="100"/>
            <TableColumn fx:id="colDateEvaluation" text="Date Evaluation" prefWidth="100"/>
            <TableColumn fx:id="colResultat" text="Résultat" prefWidth="100"/>
        </columns>
    </TableView>

    <Button fx:id="btnAjouter" text="Ajouter" layoutX="20" layoutY="330" onAction="#ajouterNote"/>
    <Button fx:id="btnModifier" text="Modifier" layoutX="100" layoutY="330" onAction="#modifierNote"/>
    <Button fx:id="btnSupprimer" text="Supprimer" layoutX="180" layoutY="330" onAction="#supprimerNote"/>
</AnchorPane>
